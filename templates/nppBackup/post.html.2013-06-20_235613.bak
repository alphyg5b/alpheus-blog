<html>
	<head>
		<title>My Blog</title>
		<style type = "text/css">
			h1{
				align : center;
				background : orange;
				margin-left : 500px;
				margin-right : 500px;
				font-family : chiller;
				font-size : 36;
			}
			.mystyle{
				margin : 40px;
			}
			.post{
				margin-left : 200px;
				margin-top : 60px;
				margin-bottom : 60px
			}
			.post-title{
				font-face : bold;
			}
		</style>
	</head>
	<body class = "mysytle" background = "http://wallpapersget.com/wp-content/uploads/2012/03/abstract-blue-wallpaper-apple-background-cool-tiger-fractal-animal.jpg" >
		<h1 align = "center">ALphEUs Blog</h1><br>
		{% for post in posts %}
		<div class = "post">
			<div class = "post-title">{{post.title}}</div><hr width = 50% align = "left">
				<pre class = "post-body">{{post.post}}</pre>
		</div>
		{% endfor %}
	</body>
</html>